<div class="container">
    <div class="row" style="margin-bottom: 20px;">
        <div class="col" style="height: 100px; padding: 20px; text-align: center">
            <h1>List of products</h1>
        </div>
    </div>
    {{#each produtos}}
        <div class="row" style="margin-bottom: 20px; border-top: solid black 1px;">
            <div class="col" style="margin-top: 20px;">
                <p>Name: {{dataValues.name}}</p>
            </div>
            <div class="col" style="margin-top: 20px;">
                <p>Price: {{dataValues.price}} R$</p>
            </div>
            <div class="col" style="margin-top: 20px;">
                <a href="/delete/{{dataValues.id}}"><button class="btn btn-danger">DELETE</button></a>
            </div>
        </div>
    {{/each}}
    <div class="row" style="border-top: solid black 1px">
        <div class="col">
            <a href="/" style="float: right; margin: 20px;"><button class="btn btn-primary">HOME</button></a>
        </div> 
    </div>    
</div>